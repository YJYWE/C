//函数指针数组
//函数：int Add(int x,int y)
//函数指针数组：int (*prArr[])(int, int)
//函数指针数组用途：转移表

#include <stdio.h>

void menu()
{
    printf("**************************\n");
    printf("**1.Sub            2.Sub**\n");
    printf("**3.Mul            4.Div**\n");
    printf("**        0.退出         **\n");
    printf("**************************\n");
}

int Add(int x,int y)
{
    return x+y;
}

int Sub(int x,int y)
{
    return x-y;
}

int Mul(int x,int y)
{
    return x*y;
}

int Div(int x,int y)
{
    return x/y;
}

int main()
{
    int input=0;
    int x=0;
    int y=0;
    int (*pfArr[5])(int,int)={0,Add,Sub,Mul,Div};
    do
    {
        menu();
        printf("请选择：>");
        scanf("%d",&input);
        if (input>=1&&input<=4) {
            printf("请输入两个操作数：>");
            scanf("%d%d",&x,&y);
            int ret=pfArr[input](x,y);
            printf("%d\n",ret);
        }
        else if (input==0)
        {
            printf("退出\n");
        }
        else
        {
            printf("选择错误\n");
        }
        
    }while(input);
}
